<h1>Log In</h1>

  <%= flash[:alert] %>
  <%= flash[:notice] %>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <button type="submit" class="btn btn-primary btn-xs actions">Login</button>
<% end %>
